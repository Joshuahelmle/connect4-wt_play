# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /rules                      controllers.HomeController.rules
GET     /games                      controllers.GameController.index
GET     /games/new                  controllers.GameController.newGame
GET     /games/:id                  controllers.GameController.getGame(id: Int)
GET     /games/:id/restart          controllers.GameController.restartGame(id : Int)
GET     /games/:id/redo             controllers.GameController.redoTurn(id : Int)
GET     /games/:id/undo             controllers.GameController.undoTurn(id : Int)
GET     /games/:id/quit             controllers.GameController.quitGame(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET /board                          controllers.BoardController.index

POST /games/:id                     controllers.GameController.handle(id: Int)
POST     /games/:id/init            controllers.GameController.initGame(id: Int)